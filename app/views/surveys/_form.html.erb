<div class="box">
  <%= form_for(@survey) do |f| %>
    <%= render 'shared/error_messages', target: @survey %>

    <fieldset>
      <legend>问卷相关信息</legend>
      <div class="form-group">
        <%= f.label :name, "* 问卷名称" %>
        <%= f.text_field :name, class: 'form-control' %>
      </div>
  
      <div class="form-group">
        <%= f.label :intro, "问卷简介" %>
        <%= f.text_area :intro, class: 'form-control' %>
      </div>
    
      <div class="form-group">
        <%= f.label :tagline, "* 标签" %>
        <%= f.text_field :tagline, class: 'form-control' %>
      </div>
      
      <%= f.submit "创建问卷", class: "btn btn-primary" %>
    </fieldset>
    
  <% end %>
</div>

