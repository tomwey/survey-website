<div class="question-item">
  <div class="row">
    <div class="col-sm-2">
      <%= f.label :title, "* 问题标题", class: 'control-label' %>
    </div>
    <div class="col-sm-10">
      <%= f.text_field :title, class: 'form-control' %>
    </div>
    
  </div>

  <div class="row">
    <div class="col-sm-2">
      <%= f.label :help_text, "帮助信息" %>
    </div>
    <div class="col-sm-10">
      <%= f.text_field :help_text, class: 'form-control' %>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-2">
      <%= f.label :question_type_id, "问题类型" %>
    </div>
    <div class="col-sm-2">
      <%= f.select :question_type_id, QuestionType.all.map { |type| [type.name, type.id] }, {}, class: 'form-control', onchange: 'add_answer(this);' %>
    </div>
    <div class="col-sm-8">
      <p class="small">文本，段落文本等是不需要输入答案选项的</p>
    </div>
  </div>
  
  <div class="row">
    <div class="col-sm-10 col-sm-offset-2">
      <%= f.fields_for :answers do |builder| %>
        <%= render 'answer_fields', f: builder %>
      <% end %>
    </div>
    
    <div class="col-sm-3 col-sm-offset-2">
      <%= link_to_add_association '添加答案', f, :answers, class: 'btn btn-default' %>
    </div>
    
  </div>
</div>
